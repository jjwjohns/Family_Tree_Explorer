{
  "manifest_version": 3,
  "name": "Family Tree Analyzer",
  "version": "1.0.0",
  "description": "Parses and analyzes a 10-generation FamilySearch family tree and provides custom genealogy tools.",

  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "*://www.familysearch.org/*"
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["*://www.familysearch.org/*"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Family Tree Analyzer"
  },

  "content_scripts": [
    {
      "matches": ["*://www.familysearch.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
